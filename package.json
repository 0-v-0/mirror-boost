{
	"name": "mirror-boost",
	"private": true,
	"version": "0.0.1",
	"description": "An extension to optimize the loading speed of styles, scripts, and icons by replacing slow-loading resources with those from mirror servers.",
	"main": "src/index.ts",
	"eslintConfig": {
		"rules": {
			"quotes": [
				"error",
				"single",
				{
					"avoidEscape": true
				}
			],
			"semi": [
				"error",
				"always"
			]
		}
	},
	"scripts": {
		"build": "vite build",
		"dev": "vite",
		"serve": "node ./test/slowServer.js",
		"typecheck": "tsc --noEmit",
		"lint": "pnpx oxlint --max-warnings=100",
		"test": "vitest run"
	},
	"author": "0-v-0",
	"license": "Apache-2.0",
	"dependencies": {
		"@cydon/ui": "link:..\\cydon\\packages\\ui",
		"cydon": "link:..\\cydon\\packages\\cydon",
		"idb": "^8.0.3"
	},
	"devDependencies": {
		"@types/chrome": "^0.1.31",
		"@types/node": "^24.10.1",
		"@unocss/transformer-directives": "^66.5.9",
		"daisyui": "^5.5.5",
		"typescript": "^5.9.3",
		"unocss": "^66.5.9",
		"unocss-preset-daisyui-next": "^0.1.2",
		"vite": "^7.2.4",
		"vitest": "^3.2.4"
	},
	"type": "module"
}
