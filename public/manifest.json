{
    "name": "Mirror Boost",
    "version": "0.1",
    "description": "An extension to optimize the loading speed of styles, scripts, and icons by replacing slow-loading resources with those from mirror servers.",
    "icons": {
        "16": "icons/icon.svg",
        "48": "icons/icon.svg",
        "128": "icons/icon.svg"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon.svg"
        }
    },
    "options_ui": {
        "page": "options.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "declarativeNetRequestWithHostAccess",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "config.js",
                "index.js"
            ],
            "all_frames": true,
            "run_at": "document_start"
        }
    ],
    "manifest_version": 3
}